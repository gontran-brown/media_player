        <div id="play_time">
          <span id="current_time_display">00:00</span> / <span id="duration_display">00:00</span>
        </div>
      </div>
      <div class="control" id="volume">
        <span>
         <ul id="volume_display">
          <li></li><li></li><li></li><li></li><li></li><li></li>
         </ul>
        </span>
      </div>
      <div class="control" id="full_screen">
       <span>
        <table border="0" cellpadding="0" cellspacing="0">
          <tbody><tr>
            <td><div class="fs-corner" id="fs_top_left"></div></td>
            <td><div class="fs-corner" id="fs_top_right"></div></td>
          </tr>
         <tr>
            <td><div class="fs-corner" id="fs_bottom_left"></div></td>
            <td><div class="fs-corner" id="fs_bottom_right"></div></td>
         </tr>
        </tbody></table>
      </span>
     </div>
